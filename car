#include<iostream>
#include<string>
#include<unistd.h>
#include<iomanip>
using namespace std;

int main()
{
	cout.setf(ios::fixed);
	cout.setf(ios::showpoint);
	cout.precision(2);
	int j = 500000;
	for (int x=10;x<75;x++)
	{
		x+10;
	
		
		
		usleep(j); 
        j = (j * 0.9); 
        	system("cls");
		cout <<setw(x)<<"_______"<<endl<<setw(x+2)<<"|     |__"<<endl<<setw(x+3)<<"|     |  |"<<endl<<setw(x+3)<<"*O----O--*";
		system("color b");
	
		
	}
}
